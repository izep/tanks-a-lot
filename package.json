{
  "name": "tanks-a-lot",
  "version": "1.0.0",
  "description": "Classic tank game PWA",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node build.js",
    "watch": "tsc --watch",
    "serve": "live-server --port=8000 --watch=dist dist",
    "dev": "npm run build && npm run watch & npm run serve",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "tank",
    "game",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.14",
    "live-server": "^1.2.2",
    "typescript": "^5.3.0",
    "vitest": "^4.0.14"
  }
}
